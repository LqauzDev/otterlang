{
  "comments": {
    "lineComment": "#",
    "blockComment": [
      "###",
      "###"
    ]
  },
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "[",
      "close": "]",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "(",
      "close": ")",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "`",
      "close": "`",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "\"\"\"",
      "close": "\"\"\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "'''",
      "close": "'''",
      "notIn": [
        "string"
      ]
    }
  ],
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "`",
      "`"
    ],
    [
      "\"\"\"",
      "\"\"\""
    ],
    [
      "'''",
      "'''"
    ]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fn|def|class|struct|enum|if|elif|else|for|while|with|match|case)\\b.*:\\s*$",
    "decreaseIndentPattern": "^\\s*(elif|else|case)\\b.*:"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*#.*$",
      "action": {
        "indent": "none"
      }
    },
    {
      "beforeText": "^\\s*(fn|def|class|struct|enum)\\b.*:\\s*$",
      "action": {
        "indent": "indent",
        "appendText": ""
      }
    },
    {
      "beforeText": "^\\s*(if|elif|else|for|while|with|match|case)\\b.*:\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\{\\s*$",
      "afterText": "^\\s*\\}",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*\\[\\s*$",
      "afterText": "^\\s*\\]",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*\\(\\s*$",
      "afterText": "^\\s*\\)",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*(elif|else|case)\\b",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}
