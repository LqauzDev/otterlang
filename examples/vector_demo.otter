use rust:nalgebra

fn main:
    print("ðŸ¦¦ nalgebra Vector3 demo via Rust FFI")

    v1 = nalgebra.vector3_new(1.0, 2.0, 3.0)
    v2 = nalgebra.vector3_new(4.0, 5.0, 6.0)

    v3 = nalgebra.vector3_add(v1, v2)
    v4 = nalgebra.vector3_scale(v3, 0.5)
    length = nalgebra.vector3_norm(v4)

    print(f"| (v1 + v2) * 0.5 | = {length}")

    nalgebra.vector3_remove(v1)
    nalgebra.vector3_remove(v2)
    nalgebra.vector3_remove(v3)
    nalgebra.vector3_remove(v4)
